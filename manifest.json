{
  "manifest_version": 2,
  "name": "lite4youtube",
  "version": "20.07.2025",
  "description": "Облегчённый YouTube: H.264 + быстрый fullscreen + блок тяжёлых ресурсов.",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/*",
    "*://*.google.com/*",
    "*://*.googletagmanager.com/*"
  ],
  "background": {
    "scripts": ["cookie.js","background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["content_script.js"],
    "run_at": "document_start"
  }],
  "browser_action": {
    "default_title": "lite4youtube",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/yt_classic16.png",
      "32": "images/yt_classic32.png",
      "48": "images/yt_classic48.png",
      "128": "images/yt_classic128.png"
    }
  },
  "icons": {
    "16": "images/yt_classic16.png",
    "32": "images/yt_classic32.png",
    "48": "images/yt_classic48.png",
    "128": "images/yt_classic128.png"
  }
}
